<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlorianMezzo.Pages.MezzoAnalysis">
    <ScrollView>
        <Grid
            BackgroundColor="Black"
            MaximumHeightRequest="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=Height}">
            <!-- Main content -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>


            <Frame
                x:Name="header"
                Grid.Row="0"
                Margin="0"
                Padding="0">        
                <!-- Main Navigation Bar -->
                <ScrollView
                    Orientation="Horizontal"
                    HorizontalOptions="FillAndExpand">
                    <Frame
                        x:Name="navBar"
                        BackgroundColor="{StaticResource Tertiary}"
                        CornerRadius="0"
                        HorizontalOptions="FillAndExpand">
                        <StackLayout Orientation="Horizontal" Spacing="40" HorizontalOptions="Center">
                            <Label
                                Text="Home"
                                Style="{StaticResource Headline}"
                                TextColor="{StaticResource PrimaryDark}"
                                VerticalOptions="Start"
                                FontSize="44"
                                SemanticProperties.HeadingLevel="Level2"
                                >
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer
                                        NumberOfTapsRequired="1"
                                        Tapped="redirectToMain" />
                                </Label.GestureRecognizers>
                            </Label>
                            <Button
                                x:Name="CompatibilityNav"
                                Text="Compatibility Tool"
                                TextColor="{StaticResource Primary}"
                                SemanticProperties.Hint="Redirects User to Tile Tester Page"
                                Clicked="redirectToCompatibility"
                                WidthRequest="270"
                                MaximumWidthRequest="1000" />
                            <Button
                                x:Name="healthCheckNav"
                                Text="Health Check" 
                                TextColor="{StaticResource Primary}"
                                SemanticProperties.Hint="Redirects User to Health Check Page"
                                Clicked="redirectToHealthCheck"
                                WidthRequest="270"
                                MaximumWidthRequest="1000" />
                            <Button
                                x:Name="mezzoAnalysisNav"
                                Text="Mezzo Analysis" 
                                TextColor="{StaticResource Primary}"
                                SemanticProperties.Hint="Redirects User to Mezzo Analysis Page"
                                Clicked="redirectToMezzoAnalysis"
                                WidthRequest="270"
                                MaximumWidthRequest="1000" />
                            <Button
                                x:Name="more3AMNav"
                                Text="More 3AM" 
                                TextColor="{StaticResource Primary}"
                                SemanticProperties.Hint="Redirects User to More 3AM Page"
                                Clicked="redirectToMore3AM"
                                WidthRequest="270"
                                MaximumWidthRequest="1000" />
                        </StackLayout>
                    </Frame>
                </ScrollView>
            </Frame>
            
            
            
                <!-- Main Content -->
            <VerticalStackLayout
                    Grid.Row="1"
                    BackgroundColor="Black"
                    x:Name="content"
                    MaximumWidthRequest="1300"
                    VerticalOptions="FillAndExpand"
                    Spacing="30">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <!-- Scrollable Bar of Buttons on the Left -->

                    <ScrollView
                            Grid.Column="0"
                            Padding="10,20"
                            MaximumHeightRequest="{Binding Source={x:Reference content}, Path=Height}">
                        <VerticalStackLayout
                                Spacing="10">
                            <Button
                                    x:Name="batteryDischargeBtn"
                                    Text="Battery Discharge"
                                    LineBreakMode="WordWrap"
                                    Command="{Binding ChangeViewCommand}"
                                    CommandParameter="batteryDischarge"
                                    BorderColor="White"
                                    BorderWidth="2"
                                    SemanticProperties.Hint="Accesses the battery discharge tool"
                                    HorizontalOptions="Center"
                                    HeightRequest="75"
                                    WidthRequest="280"/>
                            <Button
                                    x:Name="ezriMapSimBtn"
                                    Text="Ezri Maps Simulator"
                                    Command="{Binding ChangeViewCommand}"
                                    CommandParameter="ezriMapSim"
                                    LineBreakMode="WordWrap"
                                    BorderColor="White"
                                    BorderWidth="2"
                                    SemanticProperties.Hint="Accesses the Ezri Maps simulator tool"
                                    HorizontalOptions="Center"
                                    HeightRequest="75"
                                    WidthRequest="280"/>

                            <Button
                                    x:Name="a1Btn"
                                    Text="--"
                                    Command="{Binding ChangeViewCommand}"
                                    CommandParameter="ezriMapSim"
                                    LineBreakMode="WordWrap"
                                    BorderColor="White"
                                    BorderWidth="2"
                                    SemanticProperties.Hint="--"
                                    HorizontalOptions="Center"
                                    HeightRequest="75"
                                    WidthRequest="280"/>
                            <Button
                                    x:Name="a2Btn"
                                    Text="--"
                                    Command="{Binding ChangeViewCommand}"
                                    CommandParameter="ezriMapSim"
                                    LineBreakMode="WordWrap"
                                    BorderColor="White"
                                    BorderWidth="2"
                                    SemanticProperties.Hint="--"
                                    HorizontalOptions="Center"
                                    HeightRequest="75"
                                    WidthRequest="280"/>
                            <Button
                                    x:Name="a3Btn"
                                    Text="--"
                                    Command="{Binding ChangeViewCommand}"
                                    CommandParameter="ezriMapSim"
                                    LineBreakMode="WordWrap"
                                    BorderColor="White"
                                    BorderWidth="2"
                                    SemanticProperties.Hint="--"
                                    HorizontalOptions="Center"
                                    HeightRequest="75"
                                    WidthRequest="280"/>
                            <Button
                                    x:Name="a4Btn"
                                    Text="--"
                                    Command="{Binding ChangeViewCommand}"
                                    CommandParameter="ezriMapSim"
                                    LineBreakMode="WordWrap"
                                    BorderColor="White"
                                    BorderWidth="2"
                                    SemanticProperties.Hint="--"
                                    HorizontalOptions="Center"
                                    HeightRequest="75"
                                    WidthRequest="280"/>
                            <Button
                                    x:Name="a5Btn"
                                    Text="--"
                                    Command="{Binding ChangeViewCommand}"
                                    CommandParameter="ezriMapSim"
                                    LineBreakMode="WordWrap"
                                    BorderColor="White"
                                    BorderWidth="2"
                                    SemanticProperties.Hint="--"
                                    HorizontalOptions="Center"
                                    HeightRequest="75"
                                    WidthRequest="280"/>
                            <Button
                                    x:Name="a6Btn"
                                    Text="--"
                                    Command="{Binding ChangeViewCommand}"
                                    CommandParameter="ezriMapSim"
                                    LineBreakMode="WordWrap"
                                    BorderColor="White"
                                    BorderWidth="2"
                                    SemanticProperties.Hint="--"
                                    HorizontalOptions="Center"
                                    HeightRequest="75"
                                    WidthRequest="280"/>
                            <Button
                                    x:Name="a7Btn"
                                    Text="--"
                                    Command="{Binding ChangeViewCommand}"
                                    CommandParameter="ezriMapSim"
                                    LineBreakMode="WordWrap"
                                    BorderColor="White"
                                    BorderWidth="2"
                                    SemanticProperties.Hint="--"
                                    HorizontalOptions="Center"
                                    HeightRequest="75"
                                    WidthRequest="280"/>
                            <Button
                                    x:Name="a8Btn"
                                    Text="--"
                                    Command="{Binding ChangeViewCommand}"
                                    CommandParameter="ezriMapSim"
                                    LineBreakMode="WordWrap"
                                    BorderColor="White"
                                    BorderWidth="2"
                                    SemanticProperties.Hint="--"
                                    HorizontalOptions="Center"
                                    HeightRequest="75"
                                    WidthRequest="280"/>


                        </VerticalStackLayout>
                    </ScrollView>

                    <!-- Main View Section -->
                    <ContentView
                            Grid.Column="1"
                            HorizontalOptions="CenterAndExpand"
                            VerticalOptions="CenterAndExpand">
                        <ContentPresenter Content="{Binding MainView}"/>
                    </ContentView>
                </Grid>


            </VerticalStackLayout>

            <!-- Footer -->
            <Frame
                Grid.Row="2"
                x:Name="footer"
                BackgroundColor="{StaticResource Tertiary}"
                HasShadow="False"
                CornerRadius="0"
                HorizontalOptions="FillAndExpand">
                <HorizontalStackLayout
                    HorizontalOptions="EndAndExpand"
                    VerticalOptions="End">
                    <Label
                        Text="Mezzo"
                        Style="{StaticResource Headline}"
                        TextColor="{StaticResource PrimaryDark}"
                        VerticalOptions="Start"
                        FontSize="44"
                        SemanticProperties.HeadingLevel="Level2"/>
                    <Image
                        Source="i3am_gold.png"
                        HeightRequest="80"
                        HorizontalOptions="End"
                        VerticalOptions="Center"
                        Aspect="AspectFit"
                        SemanticProperties.Description="3AM Logo" />
                </HorizontalStackLayout>
            </Frame>

        </Grid>
    </ScrollView>
</ContentPage>